{% extends '@App/base.html.twig' %}

{% block title %}Créer un compteur fatidique{% endblock %}
{% block description %}Créer un compteur fatidique en remplissant le formulaire ci dessous{% endblock %}

{% form_theme form '@App/theme/extended-form-theme.twig' %}

{% block body %}

    <div class="row marketing">
        <div class="col-lg-12">
            <blockquote class="blockquote-reverse">
                <p>La distance Grappille le temps.</p>
                <footer>Eugène Guillevic</footer>
            </blockquote>
        </div>
    </div>

    <div class="row marketing">
        <div class="col-lg-12">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-default pull-right"><i class="fa fa-send"></i> Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}